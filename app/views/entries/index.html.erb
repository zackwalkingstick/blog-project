<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td style="display: block; border: 3 solid #ccc; margin-bottom: 30px;">
          <h2><%=entry.title%></h2>
          <p><%=entry.content['text']%></p>
          <span><%= link_to 'Show', entry %></span>
          <span><%= link_to 'Edit', edit_entry_path(entry) %></span>
          <span><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      </tr>
    <% end %>
    <br>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
